<prism:PrismApplication x:Class="TheDebtBook.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	     xmlns:prism="http://prismlibrary.com/"
             xmlns:local="clr-namespace:TheDebtBook">
    <Application.Resources>
        <Style x:Key="textStyling" TargetType="Control">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Baskerville Old Face" />
        </Style>

        <Style x:Key="buttonStyling" TargetType="Button">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Baskerville Old Face" />
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="55"/>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="BlanchedAlmond"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="titleMainStyling" TargetType="Label">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Baskerville Old Face"/>
        </Style>

    </Application.Resources>
</prism:PrismApplication>
